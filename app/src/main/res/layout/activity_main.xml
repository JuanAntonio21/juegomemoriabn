                    android:src="@drawable/reverso" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:onClick="vuelta11"
                    android:src="@drawable/reverso" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:onClick="vuelta12"
